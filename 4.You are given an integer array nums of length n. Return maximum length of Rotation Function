//You are given an integer array nums of length n. Return maximum length of Rotation Function.
class Solution {
public:
    int maxRotateFunction(vector<int>& nums) {
      long sum = 0,orl = 0;
        
        for(int i=0;i<nums.size();i++){
            sum += nums[i];
            orl += i*nums[i];
        }
        
        long maximum = orl;
        int n = nums.size();
        
        for(int i= n-1;i>=0;i--)
        {
            orl += sum -(nums[i]*n);
            maximum = max(orl,maximum);
        }
        return maximum;    
    }
};